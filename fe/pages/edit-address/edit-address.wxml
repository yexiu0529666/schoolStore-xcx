<!--pages/edit-address/edit-address.wxml-->
<view class="container">
  <view class="form-container">
    <!-- 收货人 -->
    <view class="form-item">
      <view class="form-label">收货人</view>
      <input 
        class="form-input" 
        value="{{address.name}}" 
        placeholder="请输入收货人姓名" 
        data-field="name" 
        bindinput="onInputChange"
      />
    </view>
    
    <!-- 手机号码 -->
    <view class="form-item">
      <view class="form-label">手机号码</view>
      <input 
        class="form-input" 
        type="number" 
        value="{{address.phone}}" 
        placeholder="请输入手机号码" 
        maxlength="11" 
        data-field="phone" 
        bindinput="onInputChange"
      />
    </view>
    
    <!-- 所在地区 -->
    <view class="form-item">
      <view class="form-label">所在地区</view>
      <picker 
        mode="region" 
        value="{{regionValue}}" 
        bindchange="bindRegionChange" 
        class="form-picker"
      >
        <view class="picker-value">
          <text wx:if="{{regionValue.length > 0}}">{{regionValue[0]}} {{regionValue[1]}} {{regionValue[2]}}</text>
          <text wx:else class="placeholder">请选择所在地区</text>
        </view>
      </picker>
    </view>
    
    <!-- 详细地址 -->
    <view class="form-item">
      <view class="form-label">详细地址</view>
      <textarea 
        class="form-textarea" 
        value="{{address.detail}}" 
        placeholder="请输入详细地址信息，如道路、门牌号、小区、楼栋号、单元等" 
        data-field="detail" 
        bindinput="onInputChange"
      ></textarea>
    </view>
    
    <!-- 设为默认地址 -->
    <view class="form-item switch-item">
      <view class="form-label">设为默认地址</view>
      <switch 
        color="#ff6b5d" 
        checked="{{address.is_default}}" 
        bindchange="onSwitchChange"
      />
    </view>
  </view>
  
  <!-- 保存按钮 -->
  <view class="save-btn" bindtap="saveAddress" disabled="{{submitting}}">
    <text>保存</text>
  </view>
</view> 