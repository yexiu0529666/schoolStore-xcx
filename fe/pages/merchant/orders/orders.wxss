/* pages/merchant/orders/orders.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #f95555;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 状态标签栏 */
.status-tabs {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 0;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  flex: 1;
  text-align: center;
}

.tab-item.active {
  color: #f95555;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #f95555;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.copy-icon {
  display: inline-block;
  font-size: 22rpx;
  color: #f95555;
  margin-left: 10rpx;
  padding: 2rpx 10rpx;
  border: 1rpx solid #f95555;
  border-radius: 20rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
}

.status-pending_payment {
  color: #ff9900;
}

.status-pending_shipment {
  color: #f95555;
}

.status-pending_receipt {
  color: #1890ff;
}

.status-completed {
  color: #52c41a;
}

.status-cancelled {
  color: #999;
}

.order-body {
  padding: 20rpx 30rpx;
}

.order-products {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #f95555;
  font-weight: bold;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0 0;
  border-top: 1rpx dashed #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.amount {
  font-size: 32rpx;
  color: #f95555;
  font-weight: bold;
  margin-left: 10rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  background-color: #fafafa;
  justify-content: center; 
}

.order-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  padding-right: 20rpx;
}

.order-actions {
  display: flex;
  gap: 24rpx;           
  flex-wrap: wrap-reverse;
  justify-content: center;  
}

.action-btn {
  margin-left: 12rpx;
  min-width: auto;
  width: auto;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex: 0 1 auto;        
  min-width: 140rpx;     
  max-width: 240rpx;     
  padding: 0 32rpx;      
  box-sizing: border-box;
  white-space: nowrap; 
}

.action-btn.warning {
  color: #ff9900;
  border-color: #ff9900;
  background-color: rgba(255, 153, 0, 0.05);
  border-width: 2rpx; 
}

.action-btn.primary {
  color: #fff;
  background-color: #f95555;
  border-color: #f95555;
  min-width: 160rpx;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 