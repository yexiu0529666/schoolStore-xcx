/* pages/merchant/dashboard/dashboard.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #f95555;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 仪表板内容 */
.dashboard-content {
  padding: 30rpx;
}

/* 卡片通用样式 */
.merchant-card,
.stats-card,
.order-card,
.shortcuts-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  padding: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 26rpx;
  color: #f95555;
}

/* 商家信息卡片 */
.merchant-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.merchant-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.merchant-info {
  flex: 1;
}

.merchant-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.merchant-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.merchant-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 统计概览卡片 */
.period-selector {
  display: flex;
  font-size: 24rpx;
}

.period-option {
  padding: 6rpx 16rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
}

.period-option.active {
  background-color: #f95555;
  color: #fff;
}

.stats-body {
  display: flex;
  padding: 20rpx 0;
}

.main-stat {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-right: 30rpx;
  border-right: 1rpx solid #f0f0f0;
}

.main-stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #f95555;
  margin-bottom: 10rpx;
}

.main-stat-label {
  font-size: 26rpx;
  color: #999;
}

.sub-stats {
  flex: 3;
  display: flex;
  justify-content: space-around;
}

.sub-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sub-stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.sub-stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 订单管理卡片 */
.order-status-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.order-status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.status-count {
  font-size: 40rpx;
  font-weight: bold;
  color: #f95555;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

/* 快捷功能卡片 */
.shortcut-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.shortcut-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.shortcut-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.shortcut-label {
  font-size: 24rpx;
  color: #666;
} 