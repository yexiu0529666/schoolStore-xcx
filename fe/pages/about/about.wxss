/* pages/about/about.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  background-color: #fff;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

/* 内容区块 */
.section {
  margin: 30rpx 30rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: #ff6b5d;
  border-radius: 4rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 功能列表 */
.feature-list {
  margin-top: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feature-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ff6b5d;
  border-radius: 50%;
  margin-right: 16rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
}

/* 联系方式 */
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-text {
  font-size: 28rpx;
  color: #666;
}

/* 底部版权 */
.footer {
  margin-top: 60rpx;
  padding: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.footer text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
} 