.container {
  padding: 0 30rpx 30rpx 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 商品信息 */
.product-info {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 评价统计 */
.review-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.rating-info {
  display: flex;
  align-items: center;
}

.average-rating {
  font-size: 48rpx;
  color: #ff5722;
  font-weight: bold;
  margin-right: 20rpx;
}

.rating-stars {
  display: flex;
  align-items: center;
}

.star-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 4rpx;
}

.rating-count {
  font-size: 28rpx;
  color: #999;
}

/* 评价筛选 */
.rating-filter {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.filter-item {
  margin: 10rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  border: 1rpx solid #eee;
}

.filter-item.active {
  color: #fff;
  background-color: #ff5722;
  border-color: #ff5722;
}

/* 评价列表 */
.reviews-list {
  padding-bottom: 30rpx;
}

.review-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 评价人信息 */
.reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.review-rating {
  margin-left: auto;
}

.review-rating .rating-stars {
  justify-content: flex-end;
}

.review-rating .star-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 2rpx;
}

/* 评价内容 */
.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

/* 规格信息 */
.review-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 评价图片 */
.review-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
  margin-bottom: 20rpx;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  margin: 8rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  object-fit: cover;
}

/* 评价时间 */
.review-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f5f5f5;
  border-top: 4rpx solid #ff5722;
  border-radius: 50%;
  animation: spin 1s infinite linear;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 无更多数据 */
.no-more {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 30rpx 0;
}

/* 无评价 */
.no-reviews {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 60rpx 0;
} 